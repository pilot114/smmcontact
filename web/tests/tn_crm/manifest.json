{
  "manifest_version" : 2,
  "name"             : "TN CRM",
  "version"          : "0.9",
  "author"           : "pilot114",
  "homepage_url"     : "http://85.143.214.78",
  "default_locale"   : "ru",

   "permissions": [
      "tabs",
      "storage",
      "activeTab",
      "https://*.vk.com/*",
      "http://tn_crm.dev/*",
      "http://*/*"
   ],

   "icons": {
      "128": "images/128.png"
   },

   "background": {
      "page": "src/background.html",
      "js": ["src/background.js"]
   },

   "browser_action": {
    "default_popup": "src/popup.html"
  },

   "content_scripts": [{
      "css": [ "css/labels.css" ],
      "js": [
        "src/jquery-3.1.0.min.js",

        "src/settings.js",
        "src/up/Debugger.js",
        "src/up/Router.js",
        "src/up/Cacher.js",
        "src/up/Http.js",
        "src/up/Util.js",
        "src/up/Application.js",
        "src/up/BGProxy.js",
        "src/up/Render.js",

        "src/ac.js",
        "src/normalize.js",
        "src/main.js"
      ],
      "matches": [ "*://vk.com/*", "*://*.vk.com/*" ]
   }]

   // "key": "",
   // "update_url": "https://clients2.google.com/service/update2/crx",
   // "web_accessible_resources": [ "scripts/*", "built/*" ]
}
