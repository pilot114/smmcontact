{% extends 'MainBundle::layout_profile.html.twig' %}

{% block main_profile %}
<h3>Добавить товар:</h3>
<form action="{{ path('add_product') }}" method="post" class="form-inline">
    <div class="form-group">
    <input type="text" name="type" class="form-control" placeholder="Тип">
    </div>
    <div class="form-group">
    <input type="text" name="article" class="form-control" placeholder="Артикул">
    </div>
    <div class="form-group">
    <input type="text" name="text" class="form-control" placeholder="Наименование">
    </div>
    <div class="form-group">
    <input type="text" name="price" class="form-control" placeholder="Цена">
    </div>
    <button type="submit" class="btn btn-default">Отправить</button>
</form>
	
<table class="table table-bordered table-striped">
	<thead>
		<th>Тип</th>
		<th>Артикул</th>
		<th>Наименование</th>
		<th>Цена</th>
		<th>Редактирование</th>
	</thead>
	<tbody>
	{% for index, product in products %}
		{% set id = product._id.oid %}
		<tr data-entity="product" data-id="{{id}}">
		<td data-field="type" class="field" contenteditable>{{product.type|raw}}</td>
		<td data-field="article" class="field" contenteditable>{{product.article|raw}}</td>
		<td data-field="text" class="field" contenteditable>{{product.text|raw}}</td>
		<td data-field="price" class="field" contenteditable>{{product.price|raw}}</td>
		<td>
			<button class="crm_save btn btn-primary">Сохранить</button>
			<button class="crm_remove btn btn-danger">Удалить</button>
		</td>
		</tr>
	{% endfor %}
	</tbody>
</table>

{% endblock %}