{% extends 'MainBundle::layout_profile.html.twig' %}

{% block main_profile %}
{#
user dump
{{ dump(user) }}
#}
<table class="table table-bordered table-striped">
	<thead>
		<th>Токен</th>
		<th>Владелец</th>
		<th>Фильтр</th>
	</thead>
	<tbody>
	{% for index, token in user.tokens %}
		<tr>
		<td>{{token.text}}</td>
		<td>{{token.owner}}</td>
		<td>{{token.filter}}</td>
		</tr>
	{% endfor %}
	</tbody>
</table>

<h2>Добавить новый токен</h2>

<div class="alert alert-success" role="alert">
<p class="bg-success">Вы можете просмотривать и редактировать любые записи, созданные с помощью любого из ваших токенов</p>
<p>Фильтр позволяет более точно настраивать, какие записи будут доступны для просмотра в плагине</p>
<p>Пример фильтра по клиентам: <mark>city:Новосибирск,status:Думает</mark></p>
</div>

<form action="{{ path('add_token') }}" method="post" class="form-inline">
    <div class="form-group">
    <input type="text" name="owner" class="form-control" placeholder="Имя">
    </div>
    <div class="form-group">
    <input type="text" name="filter" class="form-control" placeholder="Фильтр">
    </div>
    <button type="submit" class="btn btn-default">Отправить</button>
</form>

{% endblock %}