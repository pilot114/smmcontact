{% extends 'MainBundle::layout_default.html.twig' %}

{% block main_default %}

<div class="row">
    <div class="col-sm-3">

    <h2>Логин</h2>

    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <form action="{{ path('login_check') }}" method="post">
        <div class="form-group">
        <input type="text" id="username" name="_username" value="{{ last_username }}" class="form-control" placeholder="Email">
        </div>

        <div class="form-group">
        <input type="password" id="password" name="_password" class="form-control" placeholder="Password">
        </div>

        {#
        If you want to control the URL the user
        is redirected to on success (more details below)
        <input type="hidden" name="_target_path" value="/account" />
        #}
        <button type="submit" class="btn btn-default">Отправить</button>
    </form>
    </div>
</div>


{% endblock %}



